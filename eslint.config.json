{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "avoidEscape": true,
        "allowTemplateLiterals": true,
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "eol-last": ["error", "always"],
        "no-unused-vars": "error",
        "no-underscore-dangle": "error",
        "no-alert": "error",
        "no-lone-blocks": "error"
    },
    "globals": {
        "jQuery": true,
        "$": true
    }
}